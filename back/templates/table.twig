<div class="row">
    <div class="col">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Название</th>
                <th scope="col">Описание</th>
                <th scope="col">Вес</th>
                <th scope="col">Категория</th>
            </tr>
            </thead>
            <tbody>
            {% for row in rows %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ row.name }}</td>
                <td>{{ row.description }}</td>
                <td>{{ row.weight }}</td>
                <td>{{ row.category.name }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>