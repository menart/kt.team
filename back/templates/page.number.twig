<nav aria-label="Пример навигации по страницам">
    <ul class="pagination justify-content-center">
        <li class="page-item {% if page == 0 %} disabled {% endif %}"><a class="page-link" href="#">Предыдущая</a></li>
        {% for number in 1..pageCount+1 %}
            <li class="page-item {% if number == page+1 %} active {% endif %}"><a class="page-link" href="#">1</a></li>
        {% endfor %}
        <li class="page-item {% if page == pageCount %} disabled {% endif %}"><a class="page-link"
                                                                                 href="#">Следующая</a></li>
    </ul>
</nav>